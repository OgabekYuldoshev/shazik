
<div class="rounded-lg shadow bg-base-200 drawer min-h-screen">
  <input id="my-drawer" type="checkbox" class="drawer-toggle"> 
  <div class="flex flex-col items-center justify-center drawer-content bg-primary">
    <label for="my-drawer" class="drawer-button fixed top-5 left-0 bg-black bg-opacity-50 z-50">
      <i class="fas fa-cogs text-2xl text-white p-3"></i>
    </label>
    <a href="/" class="fixed top-5 right-0 bg-black bg-opacity-50 z-50">
      <i class="fas fa-globe text-2xl text-white p-3"></i>
    </a>
    <!-- Main -->
    <div id="main" class="w-full min-h-screen p-3 sm:p-10">
      <div><%- include("./stat.ejs") %></div>
      <%- include("./skills.ejs") %>
      <div class="mt-4 w-full flex flex-col sm:flex-row gap-4">
        <%- include("./works.ejs") %>
      </div>
    </div>

    <!-- main -->
  </div> 
  <div class="drawer-side">
    <label for="my-drawer" class="drawer-overlay"></label> 
    <div class="menu overflow-y-auto w-80 bg-base-100 text-base-content">
      <div
      id="sidebar"
      class="overflow-x-hidden w-full bg-white min-h-screen p-5 flex flex-col items-center absolute top-0 left-0 sm:relative z-50"
    >
      <div data-tip="Log Out" class="tooltip tooltip-right absolute top-5 left-5">
        <form action="/logout?_method=DELETE" method="post">
          <button type="submit" class="focus:outline-none">
            <i class="fas fa-sign-out-alt text-xl"></i>
          </button>
        </form>
      </div>
      <div class="absolute top-5 right-5">
          <label for="my-drawer" class="drawer-button">            <i class="fas fa-times text-xl"></i>
          </label>
      </div>
      <div class="avatar flex flex-col items-center justify-center my-5">
        <div class="mb-4 rounded-full w-24 h-24">
          <% if (user.avatar) { %>
          <img src="<%= user.avatar %> " />
          <% } else { %>
          <img
            src="https://www.kindpng.com/picc/m/24-248253_user-profile-default-image-png-clipart-png-download.png"
          />
          <% } %>
        </div>
  
        <h1 class="font-bold uppercase text-xl"><%= user.fullname %></h1>
        <p><%= user.position %></p>
      </div>
      <%- include("./user.ejs") %>
      <!-- <%- include("./username.ejs") %> -->
    </div>
    </ul>
  </div>
</div>
