<section class="flex">
  <div id="main" class="w-4/5 min-h-screen p-5">
    <div>
        <%- include("./stat.ejs") %>
    </div>
      <%- include("./skills.ejs") %>
    <div class="mt-4 flex gap-4 h-64">
        <%- include("./works.ejs") %>
        <div class="bg-white w-full rounded p-5 overflow-y-scroll flex flex-wrap gap-5">
          <img class="object-cover w-36 h-24 rounded" src="https://images.unsplash.com/photo-1506869640319-fe1a24fd76dc?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1170&q=80" alt="img">
        </div>
    </div>
</div>
  <div
    id="sidebar"
    class="w-1/5 bg-white min-h-screen relative p-5 flex flex-col items-center"
  >
    <div data-tip="Log Out" class="tooltip tooltip-right absolute top-5 left-5">
      <form action="/logout?_method=DELETE" method="post">
        <button type="submit" class="focus:outline-none">
          <i class="fas fa-sign-out-alt text-xl"></i>
        </button>
      </form>
    </div>
    <div class="avatar flex flex-col items-center justify-center my-5">
      <div class="mb-4 rounded-full w-24 h-24">
        <img
          src="http://daisyui.com/tailwind-css-component-profile-1@94w.png"
        />
      </div>
      <h1 class="font-bold uppercase text-xl"><%= user.fullname %></h1>
      <p><%= user.position %></p>
    </div>
    <%- include("./user.ejs") %> <%- include("./username.ejs") %>
  </div>
</section>
